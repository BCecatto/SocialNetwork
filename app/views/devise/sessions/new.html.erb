<body>
<h2 class="card-title center">Log in</h2>
<div class="form-inputs">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="center">
     <%= f.label :email %><br />
     <i class="col s4 offset-s4"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></i>
    </div>
  </div>

<div class="row">
  <div class="center">
    <%= f.label :password %><br />
    <i class="col s4 offset-s4"> <%= f.password_field :password, autocomplete: "off" %></i>
  </div>
</div>

<div class="row center">
  <% if devise_mapping.rememberable? -%>
    <div class="col s4 offset-s4 filled-in">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
</div>

<div class="row center">
  <div class="col s4 offset-s4 btn-large waves-effect waves-light blue">
    <%= f.submit "Log in" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</body>
